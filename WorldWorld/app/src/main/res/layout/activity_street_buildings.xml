<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_street_buildings"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.gisela.worldworld.StreetBuildings">

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="359dp"
                android:background="@drawable/building1"
                android:layout_weight="1">

            </RelativeLayout>
           <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
               android:background="@drawable/building2"
               android:layout_weight="1">

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/building3"
                android:layout_weight="1">

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/building4"
                android:layout_weight="1">

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/building5"
                android:layout_weight="1">

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/building6"
                android:layout_weight="1">

            </RelativeLayout>

        </LinearLayout>
</HorizontalScrollView>

</RelativeLayout>


