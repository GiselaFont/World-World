<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_house_interior"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="com.example.gisela.worldworld.Interior"
    android:weightSum="1">

    <RelativeLayout android:layout_height="300dp"
        android:layout_width="150dp"></RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_height="300dp"
        android:layout_width="350dp">

    <ImageView
        android:background="@drawable/monkeys"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_height="300dp"
        android:layout_width="350dp" />


        <Button
            android:onClick="playSound"
            android:background="@null"
            android:tag="Animals/zoo/monkeys/sounds/01chimp.mp3"
            android:id="@+id/chimp"
            android:layout_width="90dp"
            android:layout_height="190dp"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_below="@+id/baboon"
            android:layout_alignLeft="@+id/baboon"
            android:layout_alignStart="@+id/baboon" />

        <Button
            android:onClick="playSound"
            android:background="@null"
            android:tag="Animals/zoo/monkeys/sounds/04monkey.mp3"
            android:id="@+id/monkey"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_alignTop="@+id/chimp"
            android:layout_toRightOf="@+id/chimp"
            android:layout_toEndOf="@+id/chimp" />

        <Button
            android:onClick="playSound"
            android:background="@null"
            android:tag="Animals/zoo/monkeys/sounds/03baboon.mp3"
            android:id="@+id/baboon"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:onClick="playSound"
            android:background="@null"
            android:tag="Animals/zoo/monkeys/sounds/02gorilla.mp3"
            android:id="@+id/gorilla"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_width="100dp" />

    </RelativeLayout>

    </LinearLayout>
