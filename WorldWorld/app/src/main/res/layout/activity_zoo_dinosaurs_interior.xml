<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_house_interior"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="com.example.gisela.worldworld.Interior"
    android:weightSum="1">

    <RelativeLayout android:layout_height="300dp"
        android:layout_width="80dp">

        <ImageButton
            android:id="@+id/interiors"
            android:onClick="openQuiz"
            android:tag="@string/birds"
            android:background="@drawable/question"
            android:layout_margin="5dp"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:layout_centerHorizontal="true"/>

        <ImageButton
            android:id="@+id/back"
            android:onClick="goBack"
            android:background="@drawable/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/interiors"
            android:layout_alignLeft="@+id/interiors"
            android:layout_alignStart="@+id/interiors"
            android:layout_centerHorizontal="true"/>

        <ImageButton
            android:id="@+id/home"
            android:onClick="goHome"
            android:tag="@string/interiors"
            android:background="@drawable/home"
            android:layout_width="40dp"
            android:layout_marginTop="5dp"
            android:layout_height="40dp"
            android:layout_below="@+id/back"
            android:layout_alignLeft="@+id/back"
            android:layout_alignStart="@+id/back" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_height="300dp"
        android:layout_width="350dp">

    <ImageView
        android:background="@drawable/dinosaur"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_height="300dp"
        android:layout_width="350dp" />

        <Button
            android:onClick="playSound"
            android:background="@null"
            android:tag="Animals/zoo/dinosaurs/sounds/01triceratops.mp3"
            android:id="@+id/triceratops"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_alignTop="@+id/pterodactyl"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp" />

        <Button
            android:onClick="playSound"
            android:background="@null"
            android:tag="Animals/zoo/dinosaurs/sounds/03T-Rex_or_tyrannosaurus.mp3"
            android:id="@+id/trex"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="12dp"
            android:layout_alignTop="@+id/triceratops"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="200dp"
            android:layout_width="90dp" />

        <Button
            android:onClick="playSound"
            android:background="@null"
            android:tag="Animals/zoo/dinosaurs/sounds/04pterodactyl.mp3"
            android:id="@+id/pterodactyl"
            android:layout_marginTop="22dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/stegosaurus"
            android:layout_alignEnd="@+id/stegosaurus" />

        <Button
            android:onClick="playSound"
            android:background="@null"
            android:tag="Animals/zoo/dinosaurs/sounds/02stegosaurus.mp3"
            android:id="@+id/stegosaurus"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    </LinearLayout>
