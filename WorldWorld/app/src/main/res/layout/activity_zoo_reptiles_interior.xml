<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_house_interior"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="com.example.gisela.worldworld.Interior"
    android:weightSum="1">

    <RelativeLayout android:layout_height="300dp"
        android:layout_width="80dp">

        <ImageButton
            android:id="@+id/interiors"
            android:onClick="openQuiz"
            android:tag="@string/birds"
            android:background="@drawable/question"
            android:layout_margin="5dp"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:layout_centerHorizontal="true"/>

        <ImageButton
            android:id="@+id/back"
            android:onClick="goBack"
            android:background="@drawable/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/interiors"
            android:layout_alignLeft="@+id/interiors"
            android:layout_alignStart="@+id/interiors"
            android:layout_centerHorizontal="true"/>

        <ImageButton
            android:id="@+id/home"
            android:onClick="goHome"
            android:tag="@string/interiors"
            android:background="@drawable/home"
            android:layout_width="40dp"
            android:layout_marginTop="5dp"
            android:layout_height="40dp"
            android:layout_below="@+id/back"
            android:layout_alignLeft="@+id/back"
            android:layout_alignStart="@+id/back" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_height="300dp"
        android:layout_width="350dp">

    <ImageView
        android:background="@drawable/reptiles"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_height="300dp"
        android:layout_width="350dp" />


        <Button
            android:onClick="playSound"
            android:background="@null"
            android:tag="Animals/zoo/reptiles/sounds/04rattlesnake.mp3"
            android:id="@+id/rattlesnake"
            android:layout_width="190dp"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/turtle"
            android:layout_alignEnd="@+id/turtle"
            android:layout_marginRight="13dp"
            android:layout_marginEnd="140dp" />

        <Button
            android:onClick="playSound"
            android:background="@null"
            android:tag="Animals/zoo/reptiles/sounds/02iguana_lizard.mp3"
            android:id="@+id/iguana"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/turtle"
            android:layout_alignEnd="@+id/turtle"
            android:layout_marginEnd="-10dp"
            android:layout_height="170dp"
            android:layout_width="150dp" />

        <Button
            android:onClick="playSound"
            android:background="@null"
            android:tag="Animals/zoo/reptiles/sounds/03turtle.mp3"
            android:id="@+id/turtle"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_above="@+id/iguana"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="12dp" />

        <Button
            android:onClick="playSound"
            android:background="@null"
            android:tag="Animals/zoo/reptiles/sounds/01alligator.mp3"
            android:id="@+id/alligator"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/rattlesnake"
            android:layout_alignStart="@+id/rattlesnake" />

    </RelativeLayout>

    </LinearLayout>
