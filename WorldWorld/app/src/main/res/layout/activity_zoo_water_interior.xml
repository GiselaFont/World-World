<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_house_interior"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="com.example.gisela.worldworld.Interior"
    android:weightSum="1">

    <RelativeLayout android:layout_height="300dp"
        android:layout_width="80dp">

        <ImageButton
            android:id="@+id/interiors"
            android:onClick="openQuiz"
            android:tag="@string/birds"
            android:background="@drawable/question"
            android:layout_margin="5dp"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:layout_centerHorizontal="true"/>

        <ImageButton
            android:id="@+id/back"
            android:onClick="goBack"
            android:background="@drawable/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/interiors"
            android:layout_alignLeft="@+id/interiors"
            android:layout_alignStart="@+id/interiors"
            android:layout_centerHorizontal="true"/>

        <ImageButton
            android:id="@+id/home"
            android:onClick="goHome"
            android:tag="@string/interiors"
            android:background="@drawable/home"
            android:layout_width="40dp"
            android:layout_marginTop="5dp"
            android:layout_height="40dp"
            android:layout_below="@+id/back"
            android:layout_alignLeft="@+id/back"
            android:layout_alignStart="@+id/back" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_height="300dp"
        android:layout_width="350dp">

    <ImageView
        android:background="@drawable/water"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_height="300dp"
        android:layout_width="350dp" />


        <Button
            android:background="@null"
            android:onClick="playSound"
            android:tag="Animals/zoo/water/sounds/02dolphin.mp3"
            android:id="@+id/dolphin"
            android:layout_width="200dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/seal"
            android:layout_alignStart="@+id/seal"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="130dp"
            android:layout_height="80dp" />

        <Button
            android:background="@null"
            android:onClick="playSound"
            android:tag="Animals/zoo/water/sounds/03shark(reduce_static).mp3"
            android:id="@+id/shark"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/dolphin"
            android:layout_alignEnd="@+id/dolphin"
            android:layout_width="120dp" />

        <Button
            android:background="@null"
            android:onClick="playSound"
            android:tag="Animals/zoo/water/sounds/04squid_.mp3"
            android:id="@+id/squid"
            android:layout_width="120dp"
            android:layout_above="@+id/seal"
            android:layout_alignLeft="@+id/seal"
            android:layout_alignStart="@+id/seal"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_height="200dp" />

        <Button
            android:background="@null"
            android:onClick="playSound"
            android:tag="Animals/zoo/water/sounds/01seal_or_sea_lion.mp3"
            android:id="@+id/seal"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

    </LinearLayout>
