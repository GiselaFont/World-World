<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_house_interior"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="com.example.gisela.worldworld.Interior"
    android:weightSum="1">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="300dp">

        <ImageView
            android:background="@drawable/interior_zoo"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="600dp"
            android:layout_height="600dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:onClick="openInterior"
            android:tag="zoobirds"
            android:id="@+id/birds"
            android:layout_marginLeft="215dp"
            android:layout_marginStart="215dp"
            android:layout_marginTop="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="50dp"
            android:onClick="openInterior"
            android:tag="zoomeat"
            android:layout_height="wrap_content"
            android:background="@null"
            android:id="@+id/meat"
            android:layout_marginRight="100dp"
            android:layout_marginEnd="100dp"
            android:layout_below="@+id/birds"
            android:layout_alignRight="@+id/birds"
            android:layout_alignEnd="@+id/birds" />

        <Button
            android:onClick="openInterior"
            android:tag="zoomonkeys"
            android:background="@null"
            android:id="@+id/monkeys"
            android:layout_marginRight="17dp"
            android:layout_marginEnd="17dp"
            android:layout_marginTop="19dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/meat"
            android:layout_toLeftOf="@+id/meat"
            android:layout_toStartOf="@+id/meat"
            android:layout_width="80dp" />

        <Button
            android:onClick="openInterior"
            android:tag="zooplant"
            android:background="@null"
            android:id="@+id/plant"
            android:layout_width="80dp"
            android:layout_alignBaseline="@+id/meat"
            android:layout_alignBottom="@+id/meat"
            android:layout_toRightOf="@+id/birds"
            android:layout_toEndOf="@+id/birds"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_height="50dp" />

        <Button
            android:onClick="openInterior"
            android:tag="zooreptiles"
            android:background="@null"
            android:id="@+id/reptiles"
            android:layout_height="50dp"
            android:layout_width="90dp"
            android:layout_alignTop="@+id/monkeys"
            android:layout_toRightOf="@+id/plant"
            android:layout_toEndOf="@+id/plant"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

        <Button
            android:onClick="openInterior"
            android:tag="zoowater"
            android:background="@null"
            android:id="@+id/water"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_below="@+id/reptiles"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="120dp"
            android:layout_height="90dp" />

        <Button
            android:onClick="openInterior"
            android:tag="zoodinosaur"
            android:background="@null"
            android:id="@+id/dinosaur"
            android:layout_height="50dp"
            android:layout_width="140dp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/reptiles"
            android:layout_alignEnd="@+id/reptiles" />

        <Button
            android:onClick="openCategory"
            android:tag="Animals/zoo/animals"
            android:background="@null"
            android:id="@+id/zoo"
            android:layout_height="50dp"
            android:layout_width="140dp"
            android:layout_alignBaseline="@+id/water"
            android:layout_alignBottom="@+id/water"
            android:layout_alignLeft="@+id/birds"
            android:layout_alignStart="@+id/birds"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp" />


    </RelativeLayout>

    </LinearLayout>
