<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_house_interior"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="com.example.gisela.worldworld.Interior"
    android:weightSum="1">

    <RelativeLayout android:layout_height="300dp"
        android:layout_width="80dp">

            <ImageButton
                android:id="@+id/interiors"
                android:onClick="openQuiz"
                android:tag="@string/birds"
                android:background="@drawable/question"
                android:layout_margin="5dp"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:layout_centerHorizontal="true"/>

        <ImageButton
            android:id="@+id/back"
            android:onClick="goBack"
            android:background="@drawable/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/interiors"
            android:layout_alignLeft="@+id/interiors"
            android:layout_alignStart="@+id/interiors"
            android:layout_centerHorizontal="true"/>

        <ImageButton
                android:id="@+id/home"
                android:onClick="goHome"
                android:tag="@string/interiors"
                android:background="@drawable/home"
                android:layout_width="40dp"
            android:layout_marginTop="5dp"
            android:layout_height="40dp"
            android:layout_below="@+id/back"
            android:layout_alignLeft="@+id/back"
            android:layout_alignStart="@+id/back" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_height="300dp"
        android:layout_width="350dp">

    <ImageView
        android:background="@drawable/birds"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_height="300dp"
        android:layout_width="350dp" />

        <Button
            android:onClick="playSound"
            android:background="@null"
            android:tag="Animals/zoo/birds/sounds/04ostrich_.mp3"
            android:id="@+id/ostrich"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="80dp"
            android:layout_height="180dp" />


        <Button
            android:onClick="playSound"
            android:background="@null"
            android:tag="Animals/zoo/birds/sounds/03macaw_parrot.mp3"
            android:id="@+id/parrot"
            android:layout_width="80dp"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="110dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/flamingo"
            android:layout_toEndOf="@+id/flamingo"
            android:layout_marginBottom="10dp"
            android:layout_height="250dp" />

        <Button
        android:onClick="playSound"
        android:background="@null"
        android:tag="Animals/zoo/birds/sounds/02flamingo.mp3"
        android:id="@+id/flamingo"
        android:layout_height="170dp"
            android:layout_width="80dp"
            android:layout_alignBottom="@+id/parrot"
            android:layout_toLeftOf="@+id/ostrich"
            android:layout_toStartOf="@+id/ostrich" />

        <Button
            android:onClick="playSound"
            android:background="@null"
            android:tag="Animals/zoo/birds/sounds/01owl.mp3"
            android:id="@+id/owl"
            android:layout_height="170dp"
            android:layout_width="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>


    </LinearLayout>
