<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/townhouse2"
    android:orientation="horizontal"
    tools:context="com.example.gisela.worldworld.MainActivity">

   <Button
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/lawnmower"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_alignBottom="@+id/clown_balloons" />

    <Button
        android:onClick="playClownBalloons"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@null"
        android:id="@+id/clown_balloons"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="19dp" />

   <Button
     android:scaleType="fitXY"
     android:background="@null"
     android:layout_width="70dp"
     android:layout_height="30dp"
     android:id="@+id/wagon"
       android:layout_below="@+id/stairs"
       android:layout_toRightOf="@+id/lawnmower"
       android:layout_toEndOf="@+id/lawnmower"
       android:layout_marginLeft="150dp"
       android:layout_marginStart="150dp"
       android:layout_marginTop="15dp" />

    <Button
        android:onClick="playStairs"
        android:background="@null"
        android:id="@+id/stairs"
       android:layout_width="80dp"
        android:layout_height="40dp"
       android:layout_below="@+id/door"
       android:layout_toRightOf="@+id/wagon"
       android:layout_toEndOf="@+id/wagon" />

    <Button
        android:onClick="playDoor"
        android:background="@null"
        android:id="@+id/door"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/clown_balloons"
        android:layout_alignLeft="@+id/stairs"
        android:layout_alignStart="@+id/stairs" />


</RelativeLayout>
